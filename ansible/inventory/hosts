- name: Create Ansible inventory
  run: |
    IP=$(cat ansible/host_ip.txt | tr -d '\r')  # <-- enlÃ¨ve les retours Windows s'il y en a
    echo "[monitoring]" > ansible/hosts
    echo "${IP} ansible_user=ubuntu ansible_ssh_private_key_file=/home/runner/.ssh/id_rsa" >> ansible/hosts
    cat ansible/hosts
