{
  "id": null,
  "uid": null,
  "title": "Monitoring-Serveur",
  "tags": ["prometheus", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "",
          "logBase": 1,
          "min": 0,
          "max": 100
        },
        {
          "format": "short",
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "",
          "min": 0,
          "max": 100
        },
        {
          "format": "short",
          "show": false
        }
      ]
    },
    {
      "type": "graph",
      "title": "Disk Usage",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "(node_filesystem_size_bytes{fstype!=\"tmpfs\",mountpoint=\"/\"} - node_filesystem_free_bytes{fstype!=\"tmpfs\",mountpoint=\"/\"}) / node_filesystem_size_bytes{fstype!=\"tmpfs\",mountpoint=\"/\"} * 100",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "",
          "min": 0,
          "max": 100
        },
        {
          "format": "short",
          "show": false
        }
      ]
    }
  ]
}
